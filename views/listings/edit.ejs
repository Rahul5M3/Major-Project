<% layout("/layouts/boilerplate") %>


<div class="row mt-4">
    <div class="col-8 offset-2">
        <h3>Edit a Listing</h3>
        <form method="post" action="/listings/<%=lists._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <br>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="listing[title]" value="<%=lists.title%> " class="form-control" required>
                <div class="invalid-feedback">Enter title</div>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="" cols="30" rows="" class="form-control" required ><%=lists.description%></textarea>
                <div class="invalid-feedback">Enter description</div>
            </div>

            <div class="mb-3 ">
                Original Listing Image <br>
                <img src="<%=originalImg%>" alt="">
            </div>
            
            
            <div class="mb-3">
                <label for="image" class="form-label">Uplaod New Image </label>
                <input type="file" name="listing[image]"  class="form-control" > 
                <!-- <div class="invalid-feedback">Enter image</div> -->
            </div>
            
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input  name="listing[price]" value="<%=lists.price%>" class="form-control" required>
                <div class="invalid-feedback">Enter price</div>
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=lists.location%>" class="form-control" required> 
                    <div class="invalid-feedback">Enter location</div>
                </div>
                
                <div class="mb-3 col-md-6">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%=lists.country%>" class="form-control" required>
                    <div class="invalid-feedback">Enter country</div>
                </div>
            </div>

            <button class="btn btn-dark edit-btn mt-4">Edit</button>
            <br><br>
        </form>
    </div>    
</div>
